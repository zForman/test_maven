pipeline {
    agent any
    tools {
        maven 'maven'
    }

    environment {
        ArtifactId = readMavenPom().getArtifactId()
        Version = readMavenPom().getVersion()
        Name = readMavenPom().getName()
        GroupId = readMavenPom().getGroupId()
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('Publish Jar to Nexus Repository') {
            steps {
                script {
                    echo "GIT_BRANCH === ${GIT_BRANCH}"
//                    def nexusRepoName = Version.endWith('SNAPSHOT') ? 'SimpleJavaMavenApp-SNAPSHOT' : 'SimpleJavaMavenApp-RELEASE'
//                    nexusArtifactUploader artifacts:[
//                        [
//                            artifactId: "${ArtifactId}",
//                            classifier: '',
//                            file: "target/${ArtifactId}-${Version}.jar",
//                            type: 'jar'
//                        ]
//                    ],
//                            credentialsId: '51231d5b-eb83-4b91-8e8f-56020908d643',
//                            groupId: "${GroupId}",
//                            nexusUrl: '172.20.10.155:8081',
//                            nexusVersion: 'nexus3',
//                            protocol: 'http',
//                            repository: "${nexusRepoName}",
//                            version: "${Version}"
                }
            }
        }
    }
}
